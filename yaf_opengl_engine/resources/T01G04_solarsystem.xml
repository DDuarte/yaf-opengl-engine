	<animations>
		<animation id="teste" span="15" type = "linear">
			<controlpoint x="0.0" y="0.0" z="0.0"/>
			<controlpoint x="20.0" y="10.0" z="0.0"/>
			<controlpoint x="20.0" y="0.0" z="10.0"/>
			<controlpoint x="0.0" y="10.0" z="10.0"/>
			<controlpoint x="0.0" y="0.0" z="0.0"/>
		</animation>
	</animations>
    <graph rootid="solarsystem">
        <node id="solarsystem">
            <transforms />
            <children>
                <noderef id="sun" />
				<noderef id="vehicle" />
            </children>
		</node>
        <node id="sun">
            <transforms />
            <appearanceref id="sun" />
			<animationref id="teste" />
            <children>
                <sphere radius="1" slices="20" stacks="20"/>
            </children>
        </node>
		<node id="vehicle">
            <transforms>
				<scale factor="2 1 1"/>
			</transforms>
			<appearanceref id="earth" />
            <children>
				<patch order="1" partsU="20" partsV="20" compute="fill">
					<controlpoint x="0" y="2" z="0" /> <controlpoint x="5" y="2" z="0" />
					<controlpoint x="5" y="-2" z="0" />	<controlpoint x="0" y="-2" z="0" />	
				</patch>
				<patch order="1" partsU="20" partsV="20" compute="fill">
					<controlpoint x="5" y="-2" z="0" />	<controlpoint x="0" y="-2" z="0" />	
					<controlpoint x="0" y="2" z="0" /> <controlpoint x="5" y="2" z="0" />
				</patch>
				<patch order="1" partsU="20" partsV="20" compute="fill">
					<controlpoint x="5" y="0" z="-2" />	<controlpoint x="0" y="0" z="-2" />	
					<controlpoint x="0" y="0" z="2" /> <controlpoint x="5" y="0" z="2" />
				</patch>
				<patch order="1" partsU="20" partsV="20" compute="fill">
					<controlpoint x="0" y="0" z="2" /> <controlpoint x="5" y="0" z="2" />
					<controlpoint x="5" y="0" z="-2" />	<controlpoint x="0" y="0" z="-2" />						
				</patch>
				 <sphere radius="2" slices="20" stacks="20"/>
            </children>
        </node>
    </graph>
</yaf>
