            </transforms>
            <appearanceref id="venus" />
            <children>
                <noderef id="planet" />
            </children>
        </node>
        <node id="earthsystem">
            <transforms>
                <translate to="14.96 0 0"/>
            </transforms>
            <children>
                <noderef id="earth" />
                <noderef id="moon" />
            </children>
        </node>
        <node id="earth">
            <transforms>
                <rotate axis="x" angle="-80"/>
                <scale factor="0.06371 0.06371 0.06371" />
            </transforms>
            <appearanceref id="earth" />
            <children>
                <noderef id="planet" />
            </children>
        </node>
        <node id="moon">
            <transforms>
                <scale factor="0.017371 0.017371 0.017371" />
                <translate to="0 0.095 0.095"/>
                <rotate axis="z" angle="45" />
            </transforms>
            <appearanceref id="moon" />
            <children>
                <noderef id="planet" />
            </children>
        </node>
        <node id="mars">
            <transforms>
                <scale factor="0.039 0.039 0.039" />
                <translate to="22.794 0 0"/>
            </transforms>
            <appearanceref id="mars" />
            <children>
                <noderef id="planet" />
            </children>
        </node>
        <node id="jupiter">
            <transforms>
                <scale factor="0.69911 0.69911 0.69911" />
                <translate to="77.833 0 0"/>
            </transforms>
            <appearanceref id="jupiter" />
            <children>
                <noderef id="planet" />
            </children>
        </node>
        <node id="saturn">
            <transforms>
                <scale factor="0.58232 0.58232 0.58232" />
                <translate to="142.94 0 0"/>
                <rotate axis="x" angle="90" />
            </transforms>
            <children>
                <noderef id="saturn_planet" />
                <noderef id="saturn_ring" />
            </children>
        </node>
        <node id="saturn_planet">
            <transforms />
            <appearanceref id="saturn" />
            <children>
                <noderef id="planet" />
            </children>
        </node>
        <node id="saturn_ring">
            <transforms />
            <appearanceref id="saturn_ring" />
            <children>
                <noderef id="planet_ring" />
            </children>
        </node>
        <node id="uranus">
            <transforms>
                <scale factor="0.25362 0.25362 0.25362" />
                <translate to="287.099 0 0"/>
            </transforms>
            <children>
                <noderef id="uranus_planet"/>
                <noderef id="uranus_ring"/>
            </children>
        </node>
        <node id="uranus_planet">
            <transforms/>
            <appearanceref id="uranus" />
            <children>
                <noderef id="planet"/>
            </children>
        </node>
        <node id="uranus_ring">
            <transforms/>
            <appearanceref id="uranus_ring" />
