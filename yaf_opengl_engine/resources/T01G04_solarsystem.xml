<yaf>
    <globals background="0 0 0 0" drawmode="fill" shading="gouraud" cullface="front" cullorder="CW" />
    <cameras initial="cam_sun" >
        <perspective id="cam_sun"     near="0.1" far="5000" angle="50" pos= "00.000 0 25" target= "00.000 0 0" />
        <perspective id="cam_mercury" near="0.1" far="5000" angle="50" pos= "12.751 0 0.5" target= "12.751 0 0" />
        <perspective id="cam_venus"   near="0.1" far="5000" angle="50" pos= "17.780 0 0.5" target= "17.780 0 0" />
        <perspective id="cam_earth"   near="0.1" far="5000" angle="50" pos= "21.920 0 -0.5" target= "21.920 0 0" />
        <perspective id="cam_mars"    near="0.1" far="5000" angle="50" pos= "29.754 0 0.5" target= "29.754 0 0" />
