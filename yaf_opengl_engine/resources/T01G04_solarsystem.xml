<yaf>
    <globals background="0 0 0 0" drawmode="fill" shading="gouraud" cullface="front" cullorder="CW" />
    <cameras initial="cam1" >
        <perspective id="cam1" near="0.1" far="500" angle="45" pos="0 0 -25" target="0 0 0" />
        <ortho id="cam2" near="6.9" far="8.6" left="4.3" right="6.2" top="8.5" bottom="2.4" />
    </cameras>
    <lighting doublesided="true" local="false" enabled="true" ambient="0.5 0.5 0.5 1" >
        <omni id="light1" enabled="true"
            location="0 0 0"
            ambient="1 1 1 1"
            diffuse="1 1 1 1"
            specular="1 1 1 1"
        />
    </lighting>
    <textures>
        <texture id="sun" file="sun.jpg" />
        <texture id="mercury" file="mercury.jpg" />
