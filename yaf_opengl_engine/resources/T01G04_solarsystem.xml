    <graph rootid="solarsystem">
        <node id="planet">
            <transforms/>
            <children>
                <sphere radius="1" slices="15" stacks="15" />
            </children>
        </node>
        <node id="planet_ring">
            <transforms />
            <children>
                <torus inner="0.015" outer="1.4" slices="50" loops="50" />
            </children>
        </node>
        <node id="solarsystem">
            <transforms />
            <children>
                <noderef id="sun" />
                <noderef id="mercury" />
                <noderef id="venus" />
                <noderef id="earthsystem" />
                <noderef id="mars" />
                <noderef id="jupiter" />
                <noderef id="saturn" /> <!-- with ring -->
                <noderef id="uranus" /> <!-- with ring -->
                <noderef id="neptune" />
            </children>
        </node>
        <node id="sun">
            <transforms />
            <appearanceref id="sun" />
            <children>
                <sphere radius="6.96" slices="20" stacks="20" />
            </children>
        </node>
        <node id="mercury">
            <transforms>
                <scale factor="0.02576 0.02576 0.02576" />
                <translate to="8.35 0 0"/>
            </transforms>
            <appearanceref id="mercury" />
            <children>
                <noderef id="planet" />
            </children>
        </node>
        <node id="venus">
            <transforms>
                <scale factor="0.060518 0.060518 0.060518" />
