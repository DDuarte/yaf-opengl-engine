        <perspective id="cam_uranus"  near="0.1" far="5000" angle="50" pos="293.960 0.5 1.5" target="293.960 0 0" />
        <perspective id="cam_neptune" near="0.1" far="5000" angle="50" pos="457.390 0 1" target="457.390 0 0" />
        <ortho id="cam_overview" near="0.1" far="5000" left="300" right="-100" top="100" bottom="-100" /> 
    </cameras>
    <lighting doublesided="false" local="false" enabled="true" ambient="0.01 0.01 0.01 1" >
        <omni id="light1" enabled="true"
            location="0 0 0"
            ambient="0.01 0.01 0.01 1"
            diffuse="1 1 1 1"
            specular="1 1 1 1"
        />
    </lighting>
    <textures>
        <texture id="sun" file="sun.jpg" />
        <texture id="mercury" file="mercury.jpg" />
        <texture id="venus" file="venus.jpg" />
        <texture id="earth" file="earth.jpg" />
        <texture id="moon" file="moon.jpg" />
        <texture id="mars" file="mars.jpg" />
        <texture id="jupiter" file="jupiter.jpg" />
        <texture id="saturn" file="saturn.jpg" />
